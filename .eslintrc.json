{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-unused-vars": "error",
    "no-console": "off",
    "no-debugger": "off",
    "array-bracket-spacing": 2,
    "no-var": 2,
    "no-eval": 2,
    "arrow-spacing": 2,
    "block-spacing": 2,
    "key-spacing": 2,
    "brace-style": 2,
    "comma-dangle": 0, // 禁用:和 prettier 冲突
    "object-curly-spacing": [2, "always"],
    "complexity": ["error", { "max": 10 }],
    "prefer-const": [
      "error",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": false
      }
    ]
  }
}
